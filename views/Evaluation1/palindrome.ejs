        <script type="text/javascript">

            function checkPalindrome(string) {
                const length = string.length;                       // find the length of a string
                let flag = true;
                if(!string || string.length < 2 || typeof string !== 'string' || typeof number === 'boolean') 
                    console.log( "Not a valid input"); 
                else{
                    for (let i = 0; i < Math.floor(length / 2) ; i++) {
                        if (string[i] !== string[length - 1 - i]) {        // check first and last string are equal or not
                            flag = false;
                        }
                    }
                    flag ? console.log("It is a Palindrome") : console.log("It not a Palindrome");
                }
            }

             checkPalindrome("racecar");                            // function invocation
        </script>
