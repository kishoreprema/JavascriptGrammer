        <script type="text/javascript">

            function checkPalindrome(string) {
                const length = string.length;                       // find the length of a string
                let flag = true;
                if(!string || length < 2 || typeof string !== 'string' || typeof number === 'boolean') 
                    console.log( "Not a valid input"); 
                else{
                    perfectString = string.toLowerCase();
                    perfectString_length = perfectString.length;
                    for (let i = 0; i < Math.floor(perfectString_length / 2) ; i++) {
                        if (perfectString[i] !== perfectString[perfectString_length - 1 - i]) {       // check first and last string are equal or not
                            flag = false;
                        }
                    }
                    flag ? console.log("Default logic : It is a Palindrome") : console.log("Default logic : It not a Palindrome");  
                }
            }

             checkPalindrome("m1o1m");                            // function invocation


